#2
THis happens:
=== File *txt report ===
*txt is empty

for i in *txt; do
	if [[ $i == "*txt" ]]; then
		echo NO TXT FILES
	else
		echo === File $i report === 
		if [[ -s $i ]]; then
    			echo It has $(cat $i | wc -l) lines
    			echo Long information:
    			ls -lh $i
    			echo
    			echo First and last line:
    			head -n1 $i
    			echo ...
    			tail -n1 $i
  		else
   			echo $i is empty
		fi
	fi
done

